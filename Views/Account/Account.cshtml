<div class="container">
    <div class="row">
        <div class="col">
            <h1>Welcome, @ViewBag.Username</h1>
        </div>
        <div class="col">
            <h4> Current Balance: $@ViewBag.Balance</h4>
        </div>
    </div>
</div>
<br>
<div class="container">
    <div class="row">
        <form action="/account/transaction" method="POST">
            <div class="col-sm-4">
                <span>Deposit/Withdraw: </span><input type="number" min="-1000" max="1000" name="transaction" value="100">
            </div>
            <div class="col-sm-4">
                <button class="btn-success" type="sumbit">Submit</button>
            </div>
        </form>
    </div>
    <div class="row">
        <p>@TempData["Insufficientfunds"]</p>
    </div>
</div>
<br>

<div class="container">
    <table>
        <div class="row">
            <thead>
                <div>
                    <th class="col-md-6">Amount</th>
                </div>
                <div>
                    <th class="col-md-6">Date</th>
                </div>
            </thead>
        </div>
        <tbody>
            @foreach(var item in @ViewBag.Ledger)
            {
                if(@item.transaction < 0)
                {
                    <tr>
                        <td class="col-md-6 text-danger">$@item.transaction</td>
                        <td class="col-md-6">@item.created_at.ToString("MMM dd yyyy")</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td class="col-md-6 text-success">$@item.transaction</td>
                        <td class="col-md-6">@item.created_at.ToString("MMM dd yyyy")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>